@page "/mat"
@layout MainLayout
@inherits Bssr.Pages.MatComponent

@using Radzen
@using Radzen.Blazor
@using Bssr.Models.Bssr4
@inject Microsoft.Extensions.Localization.IStringLocalizer<Mat> L
<RadzenContent Container="main">
  <ChildContent>
    <RadzenHeading Size="H1" Text="Mat">
    </RadzenHeading>
    <div class="row">
      <div class="col-md-12">
        <RadzenSplitButton Icon="get_app" style="margin-left: 0px; margin-bottom: 10px" Text="Export" Click="@Splitbutton0Click">
          <ChildContent>
            <RadzenSplitButtonItem Text="Excel" Value="xlsx">
            </RadzenSplitButtonItem>
            <RadzenSplitButtonItem Text="CSV" Value="csv">
            </RadzenSplitButtonItem>
          </ChildContent>
        </RadzenSplitButton>
        <RadzenTextBox Placeholder="Search ..." style="display: block; margin-bottom: 10px; width: 100%" Name="Textbox0" @oninput="@(async(args) => {search = $"{args.Value}";await Load();})">
        </RadzenTextBox>
        <RadzenGrid @ref="grid0" AllowFiltering="true" FilterMode="FilterMode.Advanced" AllowPaging="true" AllowSorting="true" Data="@getMatsResult" TItem="Bssr.Models.Bssr4.Mat" PageSize="20">
          <Columns>
            <RadzenGridColumn TItem="Bssr.Models.Bssr4.Mat" Property="Naziv" Title="Naziv">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="Bssr.Models.Bssr4.Mat" Property="Kolicina" Title="Kolicina">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="Bssr.Models.Bssr4.Mat" Property="Iznos" Title="Iznos">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="Bssr.Models.Bssr4.Mat" Property="ProdaznaCena" Title="Prodazna Cena">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="Bssr.Models.Bssr4.Mat" Property="Sifra" Title="Sifra">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="Bssr.Models.Bssr4.Mat" Property="NalogID" Title="Nalog ID">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="Bssr.Models.Bssr4.Mat" Property="Artikal" Title="Artikal">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="Bssr.Models.Bssr4.Mat" Property="Tip" Title="Tip">
            </RadzenGridColumn>
          </Columns>
        </RadzenGrid>
      </div>
    </div>
  </ChildContent>
</RadzenContent>
