@page "/edit-tbl-akcija-na-artikal/{ID}"
@layout MainLayout
@inherits Bssr.Pages.EditTblAkcijaNaArtikalComponent

@using Radzen
@using Radzen.Blazor
@using Bssr.Models.Bssr4
<RadzenContent Container="main">
  <ChildContent>
    <div class="row">
      <div class="col-md-12">
        <RadzenTemplateForm TItem="Bssr.Models.Bssr4.TblAkcijaNaArtikal" Data="@tblakcijanaartikal" Visible="@(tblakcijanaartikal != null)" Submit="@Form0Submit">
          <ChildContent>
            <div style="margin-bottom: 1rem" class="row">
              <div class="col-md-3">
                <RadzenLabel Text="Datum Pocetok" Component="DatumPocetok" style="width: 100%">
                </RadzenLabel>
              </div>
              <div class="col-md-9">
                <RadzenDatePicker DateFormat="MM/dd/yyyy" style="display: block; width: 100%" @bind-Value="@(tblakcijanaartikal.DatumPocetok)" Name="DatumPocetok">
                </RadzenDatePicker>
                <RadzenRequiredValidator Component="DatumPocetok" Text="DatumPocetok is required" style="position: absolute">
                </RadzenRequiredValidator>
              </div>
            </div>
            <div style="margin-bottom: 1rem" class="row">
              <div class="col-md-3">
                <RadzenLabel Text="Datum Kraj" Component="DatumKraj" style="width: 100%">
                </RadzenLabel>
              </div>
              <div class="col-md-9">
                <RadzenDatePicker DateFormat="MM/dd/yyyy" style="display: block; width: 100%" @bind-Value="@(tblakcijanaartikal.DatumKraj)" Name="DatumKraj">
                </RadzenDatePicker>
                <RadzenRequiredValidator Component="DatumKraj" Text="DatumKraj is required" style="position: absolute">
                </RadzenRequiredValidator>
              </div>
            </div>
            <div style="margin-bottom: 1rem" class="row">
              <div class="col-md-3">
                <RadzenLabel Text="Tbl Artikal" Component="tblArtikalID" style="width: 100%">
                </RadzenLabel>
              </div>
              <div class="col-md-9">
                <RadzenDropDownDataGrid Data="@getTblArtikalsFortblArtikalIDResult" TextProperty="Sifra" ValueProperty="ID" Placeholder="Choose TblArtikal" ShowSearch="false" style="display: block; width: 100%" @bind-Value="@(tblakcijanaartikal.tblArtikalID)" Name="TblArtikalID">
                </RadzenDropDownDataGrid>
                <RadzenRequiredValidator Component="TblArtikalID" Text="tblArtikalID is required" style="position: absolute" DefaultValue="0">
                </RadzenRequiredValidator>
              </div>
            </div>
            <div style="margin-bottom: 1rem" class="row">
              <div class="col-md-3">
                <RadzenLabel Text="Akciska Cena" Component="AkciskaCena" style="width: 100%">
                </RadzenLabel>
              </div>
              <div class="col-md-9">
                <RadzenNumeric style="display: block; width: 100%" @bind-Value="@(tblakcijanaartikal.AkciskaCena)" Name="AkciskaCena">
                </RadzenNumeric>
                <RadzenRequiredValidator Component="AkciskaCena" Text="AkciskaCena is required" style="position: absolute">
                </RadzenRequiredValidator>
              </div>
            </div>
            <div style="margin-bottom: 1rem" class="row">
              <div class="col-md-3">
                <RadzenLabel Text="Rabat" Component="Rabat" style="width: 100%">
                </RadzenLabel>
              </div>
              <div class="col-md-9">
                <RadzenNumeric style="width: 100%" @bind-Value="@(tblakcijanaartikal.Rabat)" Name="Rabat">
                </RadzenNumeric>
              </div>
            </div>
            <div class="row">
              <div class="col offset-sm-3">
                <RadzenButton ButtonType="ButtonType.Submit" Icon="save" Text="Save" ButtonStyle="ButtonStyle.Primary">
                </RadzenButton>
                <RadzenButton ButtonStyle="ButtonStyle.Light" style="margin-left: 1rem" Text="Cancel" Click="@Button2Click">
                </RadzenButton>
              </div>
            </div>
          </ChildContent>
        </RadzenTemplateForm>
      </div>
    </div>
  </ChildContent>
</RadzenContent>
